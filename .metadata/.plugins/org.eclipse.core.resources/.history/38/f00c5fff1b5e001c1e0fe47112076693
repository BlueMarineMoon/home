package day13;

import java.util.Scanner;

public class Ch03Ex02 {

	public static Scanner scan = new Scanner(System.in);
	public static void main01(String[] args) {
		// 여러개의 정수를 입력한다. 끝내려면 -1을 입력한다.
		// -1이 입력 되기 전까지 숫자를 계속 입력 받는 프로그램.
		// 입력 받은 숫자 중 -1을 제외한 숫자들의 평균을 출력한다.
		// avg = 총점 / count
		int total = 0;
		int count = 0;
		double avg = 0.0;
		
		System.out.println("-1이 입력 될때까지 연속적으로 숫자 입력 받기.");
		System.out.print("입력 >> ");
		int number = scan.nextInt();
		while(number != -1) {
			count++;
			total += number;
			number = scan.nextInt();
		}
		
		avg = (double)total / (double)count;
		System.out.printf("정수의 개수는 %d개이며 평균은 %.1f입니다.\n", count, avg);
		
		System.out.println("입력 끝!");
		
	}
	
	String word;
	String total;
	public static void main(String[] word) {
		// 단어를 입력 받는 프로그램 구현.
		// "끝"이 입력 될떄까지 단어를 계속 입력 받는다.
		// 입력 된 단들 중에서 가장 긴 단어를 출력한 프로그램을 while문을 이용해서 구현하라.
		String word1;
		String total;
		
		System.out.println(" 끝이 입력 될때까지 연속적으로 문자 입력 받기.");
		System.out.print("입력 >> ");
		
		word1 = scan.next();
		
		while(word1 == "끝") {
			if(word1=="끝") {
				System.out.println("끝입니다");
			} else {
				System.out.println("문자를 다시 입력해주세요");
				word1 = scan.next();
			}
			
		}
		
		System.out.println("가장 긴 단어는 >> " + word1);
		System.out.println("입력 끝!");
		
	}

}
